extends ../_layout.pug
block variables
  - title = "電幻"
block head
  link(rel="stylesheet" href="/assets/css/light.css?version="+timestamp)
block body
  #banner
    #carouselBanner.carousel.slide.carousel-fade(data-bs-ride='carousel' data-bs-pause='false' data-bs-interval='3000')
      .carousel-indicators
        button.active(type='button' data-bs-target='#carouselBanner' data-bs-slide-to='0')
        button(type='button' data-bs-target='#carouselBanner' data-bs-slide-to='1')
        button(type='button' data-bs-target='#carouselBanner' data-bs-slide-to='2')
        button(type='button' data-bs-target='#carouselBanner' data-bs-slide-to='3')
        button(type='button' data-bs-target='#carouselBanner' data-bs-slide-to='4')
      .carousel-inner
        .carousel-item.active
          img.d-block.w-100.h-100(src='/assets/img/works/light/light01.jpg' alt='...')
        .carousel-item
          img.d-block.w-100.h-100(src='/assets/img/works/light/light02.jpg' alt='...')
        .carousel-item
          img.d-block.w-100.h-100(src='/assets/img/works/light/light03.jpg' alt='...')
        .carousel-item
          img.d-block.w-100.h-100(src='/assets/img/works/light/light04.jpg' alt='...')
        .carousel-item
          img.d-block.w-100.h-100(src='/assets/img/works/light/light05.jpg' alt='...')
      button.carousel-control-prev(type='button' data-bs-target='#carouselBanner' data-bs-slide='prev')
        span.carousel-control-prev-icon(aria-hidden='true')
        span.visually-hidden Previous
      button.carousel-control-next(type='button' data-bs-target='#carouselBanner' data-bs-slide='next')
        span.carousel-control-next-icon(aria-hidden='true')
        span.visually-hidden Next
